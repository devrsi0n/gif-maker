{
  "manifest_version": 2,
  "name": "Ononoki",
  "version": "0.2.2",
  "description": "Record GIF meme",
  "icons": {
    "16": "./icons/16.jpg",
    "48": "./icons/48.jpg",
    "64": "./icons/64.jpg",
    "128": "./icons/128.jpg"
  },
  "author": "devrsi0n",
  "background": {
    "scripts": [
      "hot-reload.js"
    ]
  },
  "permissions": ["http://localhost:3030/*"],
  "browser_action": {
    "default_icon": "./icons/default.jpg",
    "default_title": "Ononoki"
  },
  "content_scripts": [
    {
      "matches": ["http://*.bilibili.com/*", "https://*.bilibili.com/*", "http://*.iqiyi.com/*", "https://*.iqiyi.com/*", "http://*.dilidili.wang/*"],
      "js": ["vendors/chunk.js", "pages/content/index.js"],
      "css": ["pages/content/index.css"]
    }
  ]
}
